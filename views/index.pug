doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Notes
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.5.0/css/all.css', integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU', crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css?family=Comfortaa:400,700|Montserrat+Alternates:400,400i,700,700i&subset=cyrillic,cyrillic-ext,latin-ext', rel='stylesheet')
    link(rel='stylesheet', href='css/style.min.css')
  body
    section.section.menu
      .container-new
        h2.menu__title notes
        .menu__btns
          button.btn
            i.far.fa-clipboard
          button.btn
            i.far.fa-check-square
    section.section
      #root.container-root.container-new
        //p.cap no notes yet

        each note, i in notes
          a.note(id= note._id href='/notes/'+note._id)
           h2.note-title= note.title
           p.note-txt= note.content

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
