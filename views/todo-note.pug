doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title
            block title
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/css?family=Roboto:400,400i,700,700i&subset=cyrillic', rel='stylesheet')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(rel='stylesheet', href='../public/css/style.min.css')
    body
        block content
        section.top-content
            .container
                .row
                    .col
                        a.top-content-icon-link(href='/')
                            i.material-icons arrow_back_ios
                    .col.text-right
                        a.top-content-icon-link(href='#')
                            i.material-icons turned_in_not
                            // <i class="material-icons">turned_in</i>
                        a.top-content-icon-link.delete-btn(note-id= id)
                            i.material-icons(note-id= id) delete_forever
        section.todo-note-section
            .container
                .row
                    .col
                        input.form-control.form-control-lg.todo-note-title(type='text', placeholder='Add title', name='title', value= title)
                        textarea.form-control.roun0.todo-note-text(rows='6', placeholder='Add note')= text

        section.footer
            .container
                .row.align-items-center.footer-content
                    .col.palette-icon-column
                        .palette-icon-container
                            a.palette-icon-link(href='javascript://')
                                i.material-icons.palette palette
                            .palette-colors
                                a.palette-colors-link(href='javascript://')
                                    span.palette-colors-item.palette-colors-item__yellow
                                a.palette-colors-link(href='javascript://')
                                    span.palette-colors-item.palette-colors-item__blue
                                a.palette-colors-link(href='javascript://')
                                    span.palette-colors-item.palette-colors-item__pink
                    .col.text-center
                        p.date= date
                    .col.text-right
                        //a(href='javascript://')
                            //i.material-icons done
                        button.btn.send-btn(note-id= id) 
                            i.material-icons(note-id= id) done     
        script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
        script(src='/js/index.js')
