doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Full note
    link(href='https://fonts.googleapis.com/css?family=Comfortaa:400,700|Montserrat+Alternates:400,400i,700,700i&subset=cyrillic,cyrillic-ext,latin-ext', rel='stylesheet')
    link(rel='stylesheet', href='../css/style.min.css')
  body
    .note-template(identification= id)
      div.note-txt
        a(href='/') back
        a(href='/') edit
        a(href='/') delete
      h2.note-title= title
      p.note-txt= text
      p.note-date= date

